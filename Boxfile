web1:
    name: ajaxdemo
    document_root: web
    default_gateway: index.php
    index_list: [index.php]
    shared_writable_dirs:
        - app/cache
        - app/logs
    php_extensions:
        - zip
        - intl
        - mbstring
        - xsl
        - apc
        - mysql
        - posix
        - iconv
        - tokenizer
        - xml
        - pdo_mysql
    magic_quotes_gpc: Off
    after_build:
        - "rm web/app_dev.php"
        - "mv web/app.php web/index.php"
        - "curl -s https://getcomposer.org/installer | php"
        - "php composer.phar install"